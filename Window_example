import tkinter
import tkinter.messagebox

class GUI():

        def __init__ (self):

                self.window = tkinter.Tk()

                self.label = tkinter.Label(self.window, text = 'Input: ')
                self.label.pack()

                self.entry = tkinter.Entry(self.window, width = 10)
                self.entry.pack()





                self.quit_button = tkinter.Button(self.window, text='Quit', command=self.window.destroy)

                self.quit_button.pack(side='left')


                tkinter.mainloop()




if __name__ == '__main__':

        kilo_conv = GUI()
